{
  "version": 2,
  "buildCommand": "cd sociality && npm install && npm run build",
  "outputDirectory": "sociality/frontend/dist",
  "installCommand": "cd sociality && npm install",
  "builds": [
    {
      "src": "sociality/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    },
    {
      "src": "sociality/api/index.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/sociality/api/index.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
